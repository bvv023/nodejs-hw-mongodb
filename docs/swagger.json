    "schemas": {
      "contact": {
        "type": "object",
        "required": [
          "_id",
          "phoneNumber",
          "email",
          "isFavourite",
          "contactType",
          "userId",
          "updatedAt",
          "createdAt"
        ],
        "properties": {
          "_id": {
            "type": "string",
            "description": "Contact id",
            "example": "65ca67e7ae7f10c88b598384"
          },
          "phoneNumber": {
            "type": "string",
            "description": "Contact phone number",
            "example": "123-123-123"
          },
          "email": {
            "type": "string",
            "description": "Contact email",
            "example": "test@gmail.com"
          },
          "isFavourite": {
            "type": "boolean",
            "description": "Whether the contact if favourite"
          },
          "contactType": {
            "type": "string",
            "description": "Type of contact",
            "enum": [
              "work",
              "home",
              "personal"
            ],
            "example": "home"
          },
          "userId": {
            "type": "string",
            "description": "Owner's id",
            "example": "65e4decdd286b30065d54af9"
          },
          "photo": {
            "type": "string",
            "description": "Contact's photo"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time",
            "description": "Contact last update"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time",
            "description": "Contact created at"
          }
        }
      },
      "user": {
        "type": "object",
        "required": [
          "_id",
          "name",
          "email",
          "updatedAt",
          "createdAt"
        ],
        "properties": {
          "_id": {
            "description": "User id",
            "type": "string",
            "example": "65ca67e7ae7f10c88b598384"
          },
          "name": {
            "description": "User's name",
            "type": "string",
            "example": "Gareth Walker"
          },
          "email": {
            "description": "User's email",
            "type": "string",
            "example": "test@gmail.com"
          },
          "password": {
            "description": "User's password",
            "type": "string",
            "example": "12345678"
          },
          "updatedAt": {
            "description": "User last update",
            "type": "string",
            "format": "date-time"
          },
          "createdAt": {
            "description": "User created at",
            "type": "string",
            "format": "date-time"
          }
        }
      }
    },
