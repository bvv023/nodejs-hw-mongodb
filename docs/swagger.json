  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "user": {
        "type": "object",
        "required": [
          "name",
          "email",
          "password"
        ],
        "properties": {
          "_id": {
            "description": "Backend-generated unique identifier (not required in request, only in responses).",
            "type": "string",
            "format": "objectId",
            "example": "66c5f3ff36b6e6d8e160fb04",
            "readOnly": true
          },
          "name": {
            "description": "Username",
            "type": "string",
            "example": "Fedir Dvopypka"
          },
          "email": {
            "description": "E-mail address",
            "type": "string",
            "example": "twopyka@gmail.com"
          },
          "password": {
            "description": "Password",
            "type": "string",
            "example": "examplepwd12345"
          }
        }
      },
      "contact": {
        "type": "object",
        "required": [
          "_id",
          "name",
          "phoneNumber",
          "contactType",
          "userId"
        ],
        "properties": {
          "_id": {
            "description": "Backend-generated unique identifier.",
            "type": "string",
            "format": "objectId",
            "example": "66c705b05a68dd9ca451a403"
          },
          "name": {
            "description": "The name of the contact",
            "type": "string",
            "example": "Fedir Dvopypka"
          },
          "phoneNumber": {
            "description": "The phone number of the contact",
            "type": "string",
            "example": "+380487222227"
          },
          "email": {
            "description": "The email of the contact",
            "type": "string",
            "example": "twopyka@gmail.com"
          },
          "isFavourite": {
            "description": "Indicates whether the contact is marked as a favorite",
            "type": "boolean",
            "example": false
          },
          "contactType": {
            "description": "Specifies the type of contact",
            "type": "string",
            "enum": [
              "work",
              "home",
              "personal"
            ],
            "example": "work",
            "default": "personal"
          },
          "userId": {
            "description": "Unique identifier for the user who owns the contact",
            "type": "string",
            "format": "objectId",
            "example": "66c5f3ff36b6e6d8e160fb04"
          },
          "photo": {
            "description": "URL to the contacts photo",
            "type": "string",
            "example": "https://res.cloudinary.com/dja5yq7gk/image/upload/v1725092637/hvga6m5ixnpewqkjri2h.jpg"
          }
        }
      }
    },
    "responses": {
      "400": {
        "description": "Bad request, invalid input data.",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "required": [
                "status",
                "message"
              ],
              "properties": {
